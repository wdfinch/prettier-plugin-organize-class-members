{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "inlineSourceMap": true,
    "lib": ["ES2018"],
    "outDir": "build",
    "moduleResolution": "Node",
    "rootDir": "src",
    "strict": true,
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true,
    "removeComments": true,
    "esModuleInterop": true,
    "types": ["node", "jest"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "src/__tests__"]
}
